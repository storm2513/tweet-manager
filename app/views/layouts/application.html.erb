<!DOCTYPE html>
<html>
  <head>
    <title>TweetManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash_messages %>
    <nav class="navbar sticky-top navbar-light bg-white shadow-sm mb-3">
      <a class="navbar-brand" href="<%= root_path %>">
        <%= image_tag('twitter.svg', width: 30, height: 30) %>
        Tweet manager
      </a>
      <div class="form-inline">
        <% if current_user %>
          <div class="dropdown">
             <button class="btn bg-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag(current_user.image, class: 'rounded-circle') %>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
              <a class="dropdown-item" href="https://twitter.com/<%=current_user.nickname%>">@<%= current_user.nickname %></a>
              <div class="dropdown-divider"></div>
              <%= link_to 'Logout', sessions_destroy_path, :method => 'delete', class: 'dropdown-item' %>
            </div>
          </div>
        <% else %>
          <%= link_to 'Login', login_path, class: "btn btn-success text-white" %>
        <% end %>
      </div>
    </nav>
    <div class="container text-center">
      <%= yield %>
    </div>
  </body>
</html>
